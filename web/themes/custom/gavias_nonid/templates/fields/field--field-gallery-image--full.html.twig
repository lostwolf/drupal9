
<div{{ attributes }}>
  <div class="lg-block-grid-4 md-block-grid-3 sm-block-grid-2 xs-block-grid-1">
  {%- for item in items -%}
    <div class="image-item item-columns margin-bottom-30">
      <div class="gallery-post">
        <a href="{{file_url(item.content['#item'].entity.uri.value)}}" data-sub-html="{{ item.content['#item'].alt }}" class="zoomGallery" title="" data-rel="lightGallery">
          <span class="icon-expand"><i class="fa fa-expand"></i></span>
          <img src="{{file_url(item.content['#item'].entity.uri.value|image_style('thumbnail'))}}" alt=""  class="hidden" />
        </a>
        {{ item.content }}
      </div>  
    </div>
  {%- endfor -%}
</div>

